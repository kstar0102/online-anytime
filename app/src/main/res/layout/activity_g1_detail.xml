<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorBackground">
            <TextView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white_color"
                android:text="@string/G1_title"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center_horizontal" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="G1 - RIIRIS301D (Practical Assessment) Copy"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This practical assessment is portfolio based. You should only attempt this practical if you have access to the requirements of the the practical assessment outcomes."
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:padding="3dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Who should attempt the portfolio-based (existing evidence) assessment?"
            android:textAlignment="center"
            android:textColor="@color/blue_color"
            android:textSize="18dp"
            android:padding="3dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Employees or contractors who are upskilling their skills and knowledge required to apply risk management processes in the Resources and Infrastructure Industries."
            android:gravity = "left|left"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Employees or contractors who are working required to apply risk management processes in the Resources and Infrastructure Industries"
            android:gravity = "left|left"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Employees or contractors who are working in the mining, resources and construction sectors."
            android:gravity = "left|left"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Employees (current and former) who have access to their documentation such as JSAs, WMSs Risk Assessments and other documented evidence such as logbooks, minutes of meetings safety communications such as emails, etc."
            android:gravity = "left|left"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Who should not attempt the portfolio-based (existing evidence) assessment?"
            android:textAlignment="center"
            android:textColor="@color/blue_color"
            android:textSize="18dp"
            android:padding="3dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Employees or contractors with no access to completed JSA's, JHA's or SWMS."
            android:gravity = "left|left"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/number_1_selected"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"/>

                <TextView
                    android:layout_width="35dp"
                    android:textSize="13dp"
                    android:layout_height="wrap_content"
                    android:text="Detail"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:gravity="center_horizontal" />

            </LinearLayout>

            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text=">"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/number_2"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"/>

                <TextView
                    android:layout_width="41dp"
                    android:textSize="13dp"
                    android:layout_height="wrap_content"
                    android:text="Untitled page"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center_horizontal" />

            </LinearLayout>

            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text=">"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/number_3"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"/>

                <TextView
                    android:layout_width="41dp"
                    android:textSize="13dp"
                    android:layout_height="wrap_content"
                    android:text="Assessment"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center_horizontal" />

            </LinearLayout>

            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text=">"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/number_4"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"/>

                <TextView
                    android:layout_width="41dp"
                    android:textSize="13dp"
                    android:layout_height="wrap_content"
                    android:text="Coutinued"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center_horizontal" />

            </LinearLayout>

            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text=">"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/number_5"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"/>

                <TextView
                    android:layout_width="41dp"
                    android:textSize="13dp"
                    android:layout_height="wrap_content"
                    android:text="Continued"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center_horizontal" />

            </LinearLayout>

            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text=">"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/number_6"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"/>

                <TextView
                    android:layout_width="41dp"
                    android:textSize="13dp"
                    android:layout_height="wrap_content"
                    android:text="3rd Party Report"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center_horizontal" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Participant Name"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:hint="Your Name"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Participant Email Address"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:hint="Your Email"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"/>

            <DatePicker
                android:layout_gravity="center"
                android:id="@+id/datePicker1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"/>

        </LinearLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_margin="20dp"
            android:text="Continue"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>


    </LinearLayout>

</ScrollView>