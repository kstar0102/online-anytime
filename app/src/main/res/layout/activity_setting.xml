<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/colorBackground">
            <ImageView
                android:id="@+id/menu_btn_setting"
                android:layout_weight=".2"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/menu" />

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginLeft="30dp"
                android:text="@string/setting"
                android:textColor="@color/white_color"
                android:textSize="22dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/setting_title"
            android:text="Account detail"
            android:textStyle="bold"
            android:textSize="17dp"
            android:paddingTop="8dp"
            android:paddingLeft="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="Full name"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/setting_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical|right"
                android:text="freelancer"
                android:layout_marginRight="15dp"
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/setting_title"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="Email address"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/setting_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical|right"
                android:text="fl@yatala.com.au"
                android:layout_marginRight="15dp"
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/setting_title"
            android:text="Sync Detail"
            android:textStyle="bold"
            android:textSize="17dp"
            android:paddingTop="8dp"
            android:paddingLeft="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="Last synchronize date"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/setting_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="15dp"
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/setting_title"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"/>

        <Button
            android:id="@+id/setting_submit"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_radius"
            android:text="SYNC NOW"
            android:textColor="@color/white_color"
            android:textStyle="bold"
            android:textSize="16dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>